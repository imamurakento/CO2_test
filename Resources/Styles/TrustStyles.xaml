    <Style TargetType="Button" x:Key="Btn_App">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource ColorBaseWhite}, Dark={StaticResource PrimaryDarkText}}" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource ColorAccent}, Dark={StaticResource Gray600}}" />
        <Setter Property="FontFamily" Value="{StaticResource FontFamilyBase}"/>
        <Setter Property="FontSize" Value="{StaticResource Control_FontBaseSize}"/>
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="BorderWidth" Value="0"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="16,24"/>
        <Setter Property="Margin" Value="16,0,16,0"/>
        <Setter Property="HeightRequest" Value="80"/>
        <!--<Setter Property="MinimumHeightRequest" Value="44"/>-->
        <Setter Property="MinimumWidthRequest" Value="44"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">

                    <VisualState x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource ColorAccent}, Dark={StaticResource Gray600}}" />
                        </VisualState.Setters>
                    </VisualState>

                    <VisualState x:Name="Focused">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="Blue" />
                        </VisualState.Setters>
                    </VisualState>

                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="Yellow" />
                        </VisualState.Setters>
                    </VisualState>

                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="Green" />
                        </VisualState.Setters>
                    </VisualState>

                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="Gray" />
                        </VisualState.Setters>
                    </VisualState>

                </VisualStateGroup>

            </VisualStateGroupList>
        </Setter>
    </Style>

