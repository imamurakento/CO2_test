    <!--以下のURLを参照の上アイコンの見た目を変更した
        https://pg-himajin.com/dotnet/maui/radiobutton-1/
        以下のURLにradiobuttonのプロパティ一覧
        https://learn.microsoft.com/ja-jp/dotnet/maui/user-interface/controls/radiobutton?view=net-maui-9.0-->
    <Style TargetType="RadioButton">
        <Setter Property="FontFamily" Value="{StaticResource FontFamilyBase}"/>
        <Setter Property="FontSize" Value="{StaticResource Control_FontBaseSize}"/>
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="ControlTemplate">
            <ControlTemplate>
                <Grid ColumnDefinitions="Auto,Auto" ColumnSpacing="0.5">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroupList>
                            <VisualStateGroup x:Name="CheckedStates">

                                <!-- 選択時 -->
                                <VisualState x:Name="Checked">
                                    <VisualState.Setters>
                                        <Setter
                                                TargetName="mark"
                                                Property="Background" Value="{StaticResource ColorAccent}" />
                                    </VisualState.Setters>
                                </VisualState>

                                <!-- 未選択時 -->
                                <VisualState x:Name="Unchecked">
                                    <VisualState.Setters>
                                        <Setter
                                                TargetName="mark"
                                                Property="Background" Value="White" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </VisualStateManager.VisualStateGroups>

                    <!-- ここでアイコンの見た目を決めます。 -->
                    <Border
                            Stroke="Black"
                            Padding="1"
                            HeightRequest="16"
                            WidthRequest="16"
                            BackgroundColor="White">
                        <BoxView x:Name="mark" />
                    </Border>

                    <!-- Contentの内容が表示されます。 -->
                    <ContentPresenter Grid.Column="1"/>
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>

