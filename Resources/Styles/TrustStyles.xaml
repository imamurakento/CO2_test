    <!-- DataGrid全体のスタイル -->
    <Style TargetType="dg:DataGrid">
        <Setter Property="FontFamily" Value="{StaticResource FontFamilyBase}"/>
        <Setter Property="FontSize" Value="{StaticResource Control_FontBaseSize}"/>
        <Setter Property="Margin" Value="{StaticResource MgnGrdBase}"/>
        <Setter Property="RowHeight" Value="40"/>
        <Setter Property="HeaderHeight" Value="40"/>
        <Setter Property="BorderColor" Value="{StaticResource CplorFourth}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="HeaderBackground" Value="{StaticResource ColorAccent}"/>
        <Setter Property="RowsTextColorPalette" Value="{StaticResource ColorBaseBlack}"/>
        <Setter Property="BackgroundColor" Value="{StaticResource ColorBase}"/>
        <Setter Property="ActiveRowColor" Value="{StaticResource ColorAccent}"/>
        <Setter Property="SortingEnabled" Value="True"/>
        <Setter Property="PaginationEnabled" Value="False"/>
    </Style>

    <!-- ヘッダーのスタイル -->
    <Style TargetType="Span" x:Key="dgSpan">
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="FontFamily" Value="{StaticResource FontFamilyBase}"/>
        <Setter Property="FontSize" Value="{StaticResource Control_FontBaseSize}"/>
        <Setter Property="FontAttributes" Value="Bold" />

    </Style>

    <DataTemplate x:Key="dgData">
        <Label Text="{Binding}" TextColor="{StaticResource ColorBaseBlack}" FontSize="20" FontAttributes="None" FontFamily="Yu Gothic" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
